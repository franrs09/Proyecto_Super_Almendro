<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Super Almendros</title>
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
    <link rel="stylesheet" href="~/css/productos.css" />
    <link rel="stylesheet" type="text/css" href="~/wwwroot/css/style.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Agregar FontAwesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <!-- Encabezado -->
    <header>
        <div class="container">
            <div class="logo">
                <a href="/">Super Almendros</a>
            </div>
            <nav>
                <ul>
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contacto", "Contacto", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Session["Admin"] != null && (bool)Session["Admin"])
                    {
                        <li>@Html.ActionLink("Administración", "IndexAdmin", "Administrador", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (Session["UsuarioID"] != null)
                    {
                        <li>@Html.ActionLink("Productos", "Index", "Productos", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Categorias", "Index", "Categorias", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Carrito", "Index", "Carrito", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Reseñas", "Index", "Resenas", new { area = "" }, new { @class = "nav-link" })</li>
 <!-- Enlace a la página de reseñas -->
                        <li>@Html.ActionLink("Ver Perfil", "Perfil", "Usuarios", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Iniciar Sesion", "IniciarSesion", "Usuarios", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Registrarse", "Registrar", "Usuarios", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </nav>
        </div>
    </header>

    <!-- Cuerpo principal -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Pie de Página -->
    <footer>
        <div class="container">
            <p>Contáctanos: superalmendros@gmail.com | Teléfono: 2446-7632</p>
            <div class="social-media">
                <a href="https://facebook.com" target="_blank">Facebook</a>
                <a href="https://twitter.com" target="_blank">Twitter</a>
                <a href="https://instagram.com" target="_blank">Instagram</a>
            </div>
            <div class="additional-links">
                <a href="/politica-privacidad">Política de Privacidad</a>
                <a href="/terminos-servicio">Términos de Servicio</a>
            </div>
        </div>
    </footer>
</body>
</html>