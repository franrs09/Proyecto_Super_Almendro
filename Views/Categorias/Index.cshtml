
@model IEnumerable<SuperAlmendros.Models.CategoriaProducto>

@{
    ViewBag.Title = "Categorías";
    <link rel="stylesheet" type="text/css" href="~/css/categorias.css" />
}

<div class="container mt-4">
    <h2>Categorías</h2>

    <!-- Botón para crear una nueva categoría -->
    <div class="mb-3">
        @Html.ActionLink("Crear Nueva Categoría", "Create", "Categorias", new { area = "" }, new { @class = "btn btn-primary-categoria" })
    </div>

    <!-- Tabla de categorías -->
    <table class="table-categorias">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.idCategoria)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>
                       

                        <!-- Formulario para eliminar la categoría -->
                        @using (Html.BeginForm("Delete", "Categorias", new { id = item.idCategoria }, FormMethod.Post, new { onsubmit = "return confirm('¿Estás seguro de que deseas eliminar esta categoría?');", @class = "d-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger-categoria">Eliminar</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
