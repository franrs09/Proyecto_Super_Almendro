
@model Proyecto_Super_Almendro.Models.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Super Almendros";
}
<h2>Editar Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Usuario</h4>
    <hr />

    @Html.HiddenFor(model => model.ID_Usuario)
    @Html.HiddenFor(model => model.Nombre)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Dirección)
    @Html.HiddenFor(model => model.Teléfono)
    @Html.HiddenFor(model => model.Contraseña)

    <!-- Solo editar la fecha de registro porque los otros detalles son privados-->

    <div class="form-group">
        @Html.LabelFor(model => model.FechaRegistro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FechaRegistro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Guardar</button>
            @Html.ActionLink("Cancelar", "GestionUsuarios", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
}